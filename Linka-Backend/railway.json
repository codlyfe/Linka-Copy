{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "java -jar target/*.jar --spring.profiles.active=prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PORT": "8080",
        "SPRING_PROFILES_ACTIVE": "prod"
      }
    }
  },
  "healthcheck": {
    "path": "/actuator/health",
    "interval": 30,
    "timeout": 5,
    "retries": 3
  }
}